<Window x:Class="WeatherInformer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weather Informer" Height="350" Width="525" DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
    <Window.Resources>
        <ResourceDictionary Source="Style.xaml" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="225*"/>
            <ColumnDefinition Width="293*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="GetWeatherButton" Content="Get Weather" Margin="205,275,0,0" Command="{Binding GetWeatherInformation}" Grid.ColumnSpan="2" Width="113" Height="26"/>

        <Label x:Name="DescriptionLabel" Content="{Binding WeatherForecast.Weather[0].Description, Mode=TwoWay}" FontSize="16" Margin="147,32,0,0" Grid.ColumnSpan="2" Grid.Column="0" Height="25" Width="214" />
        <Label x:Name="PressureLabel" Content="Pressure"  Margin="69,76,0,0" Grid.Column="0" />
        <Label x:Name="TemperatureLabel" Content="Temperature" Margin="69,153,0,0" Grid.Column="0" />
        <Label x:Name="CloudCoverageLabel" Content="Cloud Coverage" Margin="80.2,76,0,0" Grid.Column="1" />
        <Label x:Name="WindSpeedLabel" Content="Wind Speed" Margin="80.2,153,0,0" Grid.Column="1" />

        <TextBox x:Name="CityTextBox" Background="White" Foreground="Black" FontSize="20" Margin="193,230,0,0" IsEnabled="True" Text="{Binding City,UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2"
                 Grid.Column="0" Width="138" />
        <TextBox Grid.Column="0" x:Name="PressureTextBox" Background="{StaticResource PrimaryDarkBrush}" Margin="69,100,0,0" Text="{Binding WeatherForecast.Main.Pressure,StringFormat={}{0:F0} Pa}" />
        <TextBox Grid.Column="0" x:Name="TemperatureTextBox" Background="{StaticResource PrimaryDarkBrush}" Margin="69,173,0,0" Text="{Binding WeatherForecast.Main.Temp,StringFormat={}{0:F0}°}" />
        <TextBox x:Name="CloudsTextBox" Background="{StaticResource PrimaryDarkBrush}" Margin="80.2,100,0,0"  Text="{Binding WeatherForecast.Clouds.All,StringFormat={}{0:F0}% }" Grid.Column="1" />
        <TextBox x:Name="WindSpeedTextBox" Background="{StaticResource PrimaryDarkBrush}" Margin="80.2,173,0,0"  Text="{Binding WeatherForecast.Wind.Speed,StringFormat={}{0:F0} m/s}" Grid.Column="1" />

